#!/bin/bash
#

if [ "$http_proxy" != "" ]
then
   PROXY="-e http_proxy=$http_proxy -e https_proxy=$http_proxy -e no_proxy=$no_proxy"
fi

USER="-u $(id -u)"
if [ "$GOPATH" = "" ]
then
   echo "GOPATH not set. Please set it."
   exit 1
fi

PROJECT="$(pwd | sed 's|'"$GOPATH"'src/||g')"
MOUNT="-v $GOPATH:/go -w /go/src/$PROJECT"

echo "Running $BUILD_ENV_CONTAINER container in $PROJECT"

$BUILD_ENV_DOCKER run --rm -it $MOUNT $PROXY $USER $BUILD_ENV_CONTAINER bash


